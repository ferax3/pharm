<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- сторінка css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Компанія</title>
</head>
<body class="body">
    <h1 class="text-center">Список фармкомпаній</h1>
    <div class="table-responsive">
        <table class="table table-primary table-hover table-sm">
            <tr>
                <th>Код компаній</th>
                <th>Назва</th>
                <th>Країна</th>
            </tr>
            <% for (var i = 0; i < Supplier.length; i++) { %>
                <tr>
                    <td>
                        <%= Supplier[i].id_supplier %>
                    </td>
                    <td>
                        <%= Supplier[i].name %>
                    </td>
                    <td>
                        <%= Supplier[i].country %>
                    </td>
                    <td style="background-color: white;">
                        <a class="btn btn-danger" href="/api/supplier/delete/<%=Supplier[i].id_supplier%>">Видалити</a>
                    </td>
                    <td style="background-color: white;">
                        <a class="btn btn-info" href="/api/supplier/<%=Supplier[i].id_supplier%>">Редагувати</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
    <a class="btn btn-outline-secondary" href="/" style="margin-left: 50px;">На головну</a>

    <h2 class="text-center">Додати компанію</h2>
    <form action="supplier" method="POST" class="text-center">
        <div class="mb-3">
            <label class="form-label">
                ID компанція
                <input type="number" placeholder="id" class="form-control" id="id_supplier" name="id_supplier" min="1">
            </label>
            <label class="form-label">
                Назва
                <input type="text" placeholder="Назва" class="form-control" id="name" name="name">
            </label>
            <label class="form-label">
                Країна
                <input type="text" placeholder="Країна" class="form-control" id="country" name="country">
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>